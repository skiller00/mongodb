<%- include('includes/head.ejs')%>
<main>
    <section class="header flex justify-between">
        <h1>Admin Page</h1>
        <a href="/admin/add-user" class= "py-3 px-6 bg-green-400 rounded-xl text-white">ADD USER</a>
    </section>
    <section class="container mx-auto mt-8 grid grid-cols-3 gap-4">
        <%if(users.length=== 0){%>
            <h1>NO USERS FOUND!</h1>
        <%}else{%>
            <%for(user of users){%>
                <div class="rounded-xl p-4 bg-green-400 h-64 flex flex-col justify-between">
                    <div class=" flex items-center ">
                        <div class="rounded-full w-24 h-24 overflow-hidden">
                            <img src="<%=user.avatar%>" alt="">
                        </div>
                        <h1 class="ml-6 text-white"> <%=user.firstname%> </h1>
                        <h1 class="ml-6 text-white"> <%=user.lastname%> </h1>
                    </div>
                    <div class="flex justify-between">
                        <a href="/admin/show-users/<%=user._id%>"><button>SHOW MORE</button></a>
                        <a href="/admin/updateUser/<%=user._id%>"><button>EDIT</button></a>
                        <form action="/deleteUser" method="post">
                            <input type="hidden" name="deleteID" value="<%= user._id%>">
                            <button type="submit">DELETE</button>
                        </form>
                    </div>
                </div>
            <%}%>
       <%}%>
    </section>
</main>
<%- include('includes/foot.ejs')%>